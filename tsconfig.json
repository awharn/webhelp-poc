{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "lib": [
      "esnext"
    ],
    "experimentalDecorators": true,
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": false,
    "pretty": true,
    "sourceMap": true,
    "newLine": "lf",
    "rootDir": "scripts",
    "composite": true
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "include": [
    "scripts/**/*"
  ],
  "exclude": [
    "lib",
    "node_modules",
    "**/__mocks__/*",
    "**/__tests__/*",
    "**/*.spec.ts",
    "**/*-spec.ts",
    "**/*.test.ts"
  ]
}